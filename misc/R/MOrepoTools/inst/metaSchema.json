{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Meta file",
    "description": "Meta file for instance set",
    "type": "object",
    "properties": {
        "contributionName": {
            "description": "The name of the repo containing the contribution (without the MOrepo- prefix)",
            "type": "string"
        },
        "maintainer": {
            "description": "Name and e-mail of the maintainer who have added the instances to MOrepo",
            "type": "string"
        },
        "rawDesc": {
            "description": "Short description of the raw format",
            "type": "string"
        },
        "algorithm": {
            "description": "Url to the algorithm used in the study",
            "type": "string"
        },
        "instanceGroups": {
            "type": "array",
            "items": {
                "title": "Instance groups",
                "type": "object",
                "properties": {
                     "subfolder": {
                        "description": "Subfolder in an instance format folder",
                        "type": "string"
                     },
                     "creator": {
                        "description": "Name and e-mail of the creator of the instances",
                        "type": "string"
                    },
                     "class": {
                        "description": "Problem class",
                        "type": "string"
                     },
                     "objectives": {
                        "description": "Number of objectives",
                        "type": "number"
                     },
                     "tags": {
                        "description": "An array with tags",
                        "type": "array",
                        "items": {
                           "type": "string"
                        }
                     },
                     "format": {
                        "type": "array",
                        "items": {
                           "type": "string"
                        },
                        "minItems": 1,
                        "uniqueItems": true
                     },
                     "desc": {
                        "description": "Description of the instance group",
                        "type": "string"
                     }
                },
                "required": ["subfolder", "creator", "class", "objectives", "format", "desc"]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "resultGroups": {
            "type": "array",
            "items": {
                "title": "Result groups",
                "type": "object",
                "properties": {
                     "subfolder": {
                        "description": "Subfolder in an instance format folder",
                        "type": "string"
                     },
                     "creator": {
                        "description": "Name and e-mail of the creator of the results",
                        "type": "string"
                    },
                     "class": {
                        "description": "Problem class",
                        "type": "string"
                     },
                     "tags": {
                        "description": "An array with tags",
                        "type": "array",
                        "items": {
                           "type": "string"
                        }
                     },
                     "desc": {
                        "description": "Description of the result group",
                        "type": "string"
                     }
                },
                "required": ["subfolder", "creator", "class", "objectives", "desc"]
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": ["contributionName", "maintainer"],
    "anyOf" : ["instanceGroups", "resultGroups"]
}
